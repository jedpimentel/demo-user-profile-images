<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <script src="https://aframe.io/releases/0.9.2/aframe.min.js"></script>
</head>
<body>
<div class="container">

    <div class="text-center" style="margin: 8px">
        <a href="/menu" class="btn btn-default btn-sm">Menu</a>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/scratching-post" class="btn btn-default btn-sm" style="background-color:gray;">Scratching Post</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- IMAGES THING -->
        <!-- TODO: rename references to "messages" as "images" -->
        <div class="col-sm-6">
          <h2>Images</h2>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <h3><%= messages[i].name %><a href="/image-viewer/<%= messages[i]._id %>"> [link]</a></h3>
              <span><%= messages[i].img %></span>
              <img src="<%= messages[i].path %>" alt=""/> 
              <p><%= messages[i].msg %></p>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add an image</h2>
          <% if (user.local.email) { %>
            <form action="/images" enctype="multipart/form-data" method="POST">
              <input type="text" value="<%= user.local.email %>" name="name">

              <!-- <input type="file" name="file-to-upload"> -->
              <input type="file" name="file-to-upload">

              <input type="text" placeholder="message" name="msg">
              <button type="submit">Submit</button>
            </form>
          <% } %>
        </div>





        <div class="col-sm-6">
          <style type="text/css">
            a-scene {
              height: 300px;
              width: 100%;
            }
          </style>
          <a-scene embedded>

            <a-entity position="0 0 -3">
              <% for(var i=0; i<messages.length; i++) {%>
                <a-text
                  width="1" align="center"
                  position="<%= i - messages.length/2 + 0.5 %> 2.7 0"
                  value="<%= messages[i].name %>"
                ></a-text>
                <a-image
                  position="<%= i - messages.length/2 + 0.5 %> 2 0"
                  src="<%= messages[i].path %>"
                ></a-image>
                <a-text
                  width="0.95" align="left" baseline="top"
                  position="<%= i - messages.length/2 + 0.025 %> 1.4 0"
                  value="<%= messages[i].msg %>"
                ></a-text>
              <% } %>
            </a-entity>

            <a-box position="-1 0.5 -4" rotation="0 45 0" color="blue"></a-box>
            <a-sphere position="0 1.25 -5" radius="1.25" color="red"></a-sphere>
            <a-cylinder position="1 0.75 -4" radius="0.5" height="1.5" color="green"></a-cylinder>
            <a-plane position="0 0 -4" rotation="-90 0 0" width="4" height="4" color="gray"></a-plane>
            <a-sky color="black"></a-sky>
          </a-scene>


          <h3>Text Only</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

            <h2>Add a message</h2>
            <% if (user.local.email) { %>
              <form action="/messages" method="POST">
                <input type="text" value="<%= user.local.email %>" name="name">
                <input type="text" placeholder="message" name="msg">
                <button type="submit">Submit</button>
              </form>
            <% } %>
        </div>

</div>

<script src="main.js"></script>

</body>
</html>
