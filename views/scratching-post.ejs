<!doctype html>
<html>
<head>
    <title>21 Savage Fan Site</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Menu Page</h1>
        <a href="/menu" class="btn btn-default btn-sm">Menu</a>
        <a href="/profile" class="btn btn-default btn-sm">Profile</a>
        <a href="/scratching-post" class="btn btn-default btn-sm" style="background-color:gray;">Scratching Post</a>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- IMAGES THING -->
        <!-- TODO: rename references to "messages" as "images" -->
        <div class="col-sm-6">
          <h2>Images</h2>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <h3><%= messages[i].name %><a href="/image-viewer/<%= messages[i]._id %>"> [link]</a></h3>
              <span><%= messages[i].img %></span>
              <img src="<%= messages[i].path %>" alt=""/> 
              <p><%= messages[i].msg %></p>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Add an image</h2>
          <% if (user.local.email) { %>
            <form action="/images" enctype="multipart/form-data" method="POST">
              <input type="text" value="<%= user.local.email %>" name="name">

              <!-- <input type="file" name="file-to-upload"> -->
              <input type="file" name="file-to-upload">

              <input type="text" placeholder="message" name="msg">
              <button type="submit">Submit</button>
            </form>
          <% } %>
        </div>





        <div class="col-sm-6">
          <h3>Messages</h3>
          <ul class="messages">
          <% for(var i=0; i<messages.length; i++) {%>
            <li class="message">
              <span><%= messages[i].name %></span>
              <span><%= messages[i].msg %></span>
              <span><%= messages[i].thumbUp %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

            <h2>Add a message</h2>
            <% if (user.local.email) { %>
              <form action="/messages" method="POST">
                <input type="text" value="<%= user.local.email %>" name="name">
                <input type="text" placeholder="message" name="msg">
                <button type="submit">Submit</button>
              </form>
            <% } %>
        </div>

        <!-- IMAGE UPLOAD -->
        <form action="/up" enctype="multipart/form-data" method="post">
           <!-- <input type="file" name="file-to-upload"> -->
           <input type="file" name="file-to-upload">
           <input type="submit" value="Upload">
         </form>

</div>

<script src="main.js"></script>

</body>
</html>
